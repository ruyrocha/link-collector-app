<p style="color: green"><%= notice %></p>

<%= render @page %>

<div id="page_links">
  <% @page_links.each do |page_link| %>
    <%= render page_link %>
    <p>
      <%= link_to "Show this page link", page_link %>
    </p>
  <% end %>
</div>

<%== pagy_nav(@pagy) if @pagy.pages > 1 %>

<div>
  <%= link_to "Edit this page", edit_page_path(@page) %> |
  <%= link_to "Back to pages", pages_path %>

  <%= button_to "Destroy this page", @page, method: :delete %>
</div>

